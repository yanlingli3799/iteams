extends layout

block content
  .container
    form.form-horizontal(role='form',action='/session',method='post')
      .form-group
        h2.col-sm-offset-4.col-sm-4 Sign in to iTeams
      .form-group
        label.col-sm-4.control-label Email
        .col-sm-4
          input.form-control(type='email',id='email',name='email', placeholder='Email' required autofocus)
        p.help-block
      .form-group
        label.col-sm-4.control-label Password
        .col-sm-4
          input.form-control(type='password',id='password',name='password', placeholder='Password' required)
        p.help-block
      .form-group
        .col-sm-offset-4.col-sm-4
          .checkbox
            label
              input(type='checkbox')
              |  Remember me
      .form-group
        .col-sm-offset-4.col-sm-4
          button.btn.btn-primary.btn-block(type='submit') Sign in
      .form-group
        .col-sm-offset-4.col-sm-4
          label
            | New to iTeams?
          label
            a(href='/signup',target='_blank') Create a New Account